<% if user_signed_in? %>

  <h1><%= "#{t(:applies)} #{current_user.name}" %></h1>

  <body>
    <table>
      <tr>
        <th><%= t(:title) %>:</th>
        <th><%= t(:info) %>:</th>
        <th colspan="3"></th>
        <th></th>
      </tr>

      <% @applies.each do |apply| %>
        <tr>
          <td><%= apply.project.title %></td>
          <td><%= apply.project.info %></td>
          <% if can? :destroy, apply %>
            <td><%= link_to t(:refuse_project), apply, method: :delete, data: { confirm: t(:delete_confirm) } %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <body>
<% end %>

<%= link_to t(:back_to_all_project), projects_path %>
