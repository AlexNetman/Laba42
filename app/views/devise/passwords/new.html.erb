<div class="login">
  <section class="login-first">
    <%= image_tag("thought_face.svg", alt: "clap", class: "login-first__image") %>
    <h1 class="login-first__title"><%= t(:forgot_password?) %></h1>
    <p class="login-first__subtitle"><%= t(:forgot_password_label) %></p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t(:email) %>
      </div>
      <%= f.submit t(:send_link), class: "button button--blue button--login" %>
      <span class="form-field">
        <%= link_to t(:i_remember_password), new_user_session_path %>
      </span>
    <% end %>
    <div class="login-first__bottom">
      <%= link_to t(:sign_up), new_registration_path(resource_name) %>
      <span class="login-first__remark"><%= t(:remark_to_signup) %></span>
    </div>
  </section>
  <section class="login-second">
    <%= image_tag("fogot_pass.svg", alt: "fogot_password", class: "login-second__image") %>
  </section>
</div>
