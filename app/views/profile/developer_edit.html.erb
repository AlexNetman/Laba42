<div class="user-form">
  <h1 class="user-form__title"><%= t(:profile_edit) %></h1>
  <%= form_with url: profile_path, method: :patch do %>

    <div class="form-field">
      <%= text_field_tag :name, @user.name, placeholder:  t(:name) %>
    </div>

    <div class="form-field">
      <%= text_field_tag :phone_number, @user.phone_number, placeholder:  t(:input_phone) %>
    </div>

    <div class="form-field">
      <%= text_field_tag :skills, @user.skills, placeholder:  t(:skills) %>
    </div>

    <div class="form-field">
      <%= text_field_tag :info, @user.info, placeholder:  t(:info) %>
    </div>

    <div class="user-form__center">
      <%= submit_tag t(:next_button), class: "button button--blue button--large user-form__button"%>
    </div>
  <% end %>
</div>
