<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @project.user.name %>
</p>

<p>
  <strong>Info:</strong>
  <%= @project.info %>
</p>

<% if user_signed_in? %>

  <div>
    <%= link_to t(:apply_project),{ controller: 'applies', action: 'create', project: @project.id},
                  {method: :post} %>
  </div>
  <%= binding.pry %>

  <% if can? :manage, @project %>
    <%= link_to 'редактировать', edit_project_path(@project) %>
    <%= link_to 'Удалить', project_path(@project),
                              method: :delete,
                              data: { confirm: 'Are you sure?' } %>
  <% end %>
<% end %>
<%= link_to 'вернуться к списку проектов', projects_path %>
