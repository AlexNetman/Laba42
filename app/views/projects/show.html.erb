<p>
  <strong><%= t(:title) %>:</strong>
  <%= @project.title %>
</p>

<p>
  <strong><%= t(:author) %>:</strong>
  <%= @project.user.name %>
</p>

<p>
  <strong><%= t(:info) %>:</strong>
  <%= @project.info %>
</p>

<% if user_signed_in? %>

  <div>
    <%= link_to t(:apply_project),{ controller: 'applies', action: 'create', project_id: @project.id},
                  {method: :post} %>
  </div>

  <% if can? :manage, @project %>
    <%= link_to t(:edit), edit_project_path(@project) %>
    <%= link_to t(:destroy), project_path(@project),
                              method: :delete,
                              data: { confirm: t(:delete_confirm) } %>
  <% end %>
<% end %>
<%= link_to t(:back_to_all_project), projects_path %>
